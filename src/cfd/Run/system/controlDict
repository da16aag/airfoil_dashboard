        log             true;
        rhoInf          1.2;
        liftDir         (0 1 0);
        dragDir         (1 0 0);
        CofR            (0.25 0 0);
        pitchAxis       (0 0 1);
        magUInf         6;
        lRef            1;
        Aref            0.01;
	}

	//residuals
